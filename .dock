#!/usr/bin/env bash

/usr/local/bin/dockutil --no-restart --remove all

/usr/local/bin/dockutil --no-restart --add /System/Applications/System\ Preferences.app/
/usr/local/bin/dockutil --no-restart --add /System/Applications/Utilities/Terminal.app/
/usr/local/bin/dockutil --no-restart --add /System/Applications/TextEdit.app/
/usr/local/bin/dockutil --no-restart --add /Applications/Apple\ Configurator 2.app/
/usr/local/bin/dockutil --no-restart --add '' --type spacer --section apps

/usr/local/bin/dockutil --add '~/Downloads' --view fan --display stack --sort dateadded
/usr/local/bin/dockutil --add '/Applications' --view list --display stack --sort name


killall Dock
